worker_processes 1;
events { worker_connections 1024; }

http {
  include       mime.types;
  default_type  application/octet-stream;

  sendfile        on;
  keepalive_timeout  65;

  server {
    listen       <%= ENV["PORT"] %>;   # NGINX listens on Heroku's $PORT
    server_name  localhost;

    location / {
        root   <%= ENV["HEROKU_APP_DIR"] %>;  # Serve files from the app directory
        index  home.html;
        try_files $uri $uri/ /home.html;  # Fallback to home.html if URI not found
    }   

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
      root   <%= ENV["HEROKU_APP_DIR"] %>;
    }
  }
}
